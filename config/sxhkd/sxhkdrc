#
# wm independent hotkeys
#

# terminal emulator
super + Return
    alacritty

# program launcher
super + {d,s,w}
    rofi -modi run,ssh,window -show {run,ssh,window}

super + c
    rofi -modi "clipboard:greenclip print" -show clipboard

super + v
    screenlayout

super + alt + l
    betterlockscreen -l dimblur

super + {_,shift + }p
    screenshot {full, selection}

# increase,decrease screen brightness
XF86MonBrightness{Down,Up}
    xbacklight -{dec,inc} 5 -steps 1

# min/max brightness
super + XF86MonBrightness{Down,Up}
    xbacklight -set {0,100} -steps 10

#
# bspwm hotkeys
#

# restart bspwm
super + shift + r
    bspc wm -r

# close and kill
super + {_,shift + }q
    bspc node -{c,k}

# send the newest marked node to the newest preselected node
super + b
    bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
    bspc node -s biggest.local

#
# state/flags

# set the window state
super + f
    bspc node focused.tiled -t fullscreen || bspc node focused.fullscreen -t tiled

# set the node flags
super + {m,x,y}
    bspc node focused -g {marked,locked,sticky}

super + shift + space
    bspc node focused.floating -t tiled || bspc node focused.tiled -t floating

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {period,comma}
    bspc node -f @{parent,brother}

# focus the next/previous node in the current desktop
super + {_,shift + }n
    bspc node -f {next,prev}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} focused:'^{1-9,10}'

super + a;{1-9,0}
    bspc node any.local -d focused:'^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#
super + !button{1,3}
    {wmv, wrs} -a %i %i $(pfw)

#
# toggle split
#
super + {_, shift + } t
    bspc node @parent -R {90, -90}


# scratchpad
super + shift + minus
    scratch send;

super + minus
    scratch cycle;

#
# dunst
#
ctrl + {_,alt + } space
    dunstctl {close, close-all}

ctrl + shift + period
    dunstctl context
