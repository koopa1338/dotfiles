[global]
    ### Display ###

    monitor = 0
    follow = mouse

    origin = top-right
    offset = 20x50

    indicate_hidden = yes
    shrink = yes
    transparency = 0
    separator_height = 3
    padding = 12
    horizontal_padding = 12
    frame_width = 3

    separator_color = auto
    sort = yes
    idle_threshold = 120

    ### Text ###
    font = Inconsolata Nerd Font 14
    line_height = 0

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed

    markup = full
    format = "<b>%s </b>\n%b"
    alignment = left
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = no

    ### Icons ###
    icon_position = left
    min_icon_size = 32
    max_icon_size = 64
    icon_path = .icons/flattrcolor/status/24:.icons/flattrcolor/devices/48:.icons/flattrcolor/apps/scalable:.icons/flattrcolor/actions/scalable

    ### History ###
    sticky_history = yes
    history_length = 20
    history = ctrl+grave
    close_all = ctrl+shift+grave
    close = ctrl+space

    ### Misc/Advanced ###
    dmenu = /usr/bin/rofi -show run
    browser = /usr/bin/firefox
    always_run_script = true
    title = Dunst
    class = Dunst
    force_xinerama = false

[experimental]
