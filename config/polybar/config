label-full = %percentage%%
format-full-prefix = " ÔÉß " 
format-full-prefix-foreground = ${colors.primary}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 =" ÔâÑ "
ramp-capacity-1 =" ÔâÉ "
ramp-capacity-2 =" ÔâÇ "
ramp-capacity-3 =" ÔâÅ "
ramp-capacity-4 =" ÔâÄ "
