[colors]
background = ${xrdb:color0}
background-alt = ${xrdb:color8}
foreground = ${xrdb:color7}
foreground-alt = #555
primary = ${xrdb:color6}
secondary = ${xrdb:color9}
alert = #bd2c40
col = #00f

[sizes]
bar-width = 100%
bar-height = 30

bar-bottom-gap = 0

[bar/mon1]
locale = de_DE.UTF-8
monitor = ${env:MONITOR:eDP}
bottom = false
width = ${sizes.bar-width}
height = ${sizes.bar-height}
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 1

font-0 = Inconsolata Nerd Font:size=14;1
font-1 = Mikachan:size=14;0
font-2 = Noto Mono for Powerline:pixelsize=14;1

modules-left = bspwm
modules-center = pulseaudio-control
modules-right = battery temperature memory date lock logout reboot poweroff

tray-position = right
tray-padding = 1
tray-detached = false

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[bar/mon2]
locale = de_DE.UTF-8
monitor = ${env:MONITOR}
bottom = false
width = ${sizes.bar-width}
height = ${sizes.bar-height}
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 1

font-0 = Inconsolata Nerd Font:size=14;1
font-1 = Mikachan:size=14;0
font-2 = Noto Mono for Powerline:pixelsize=14;1

modules-left = bspwm

tray-position = right
tray-padding = 1
tray-detached = false

wm-restack = bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/lock]
type = custom/text

; Label
content            = ÔÄ£
; content-foreground = ${colors.foreground}
content-padding    = 1

; Mouse click
click-left = betterlockscreen -l dimblur

[module/logout]
type = custom/text

; Label
content            = ÔÇã
; content-foreground = ${colors.foreground}
content-padding    = 1

; Mouse click
click-left = bspc quit

[module/reboot]
type = custom/text

; Label
content            = Ó´í
; content-foreground = ${colors.foreground}
content-padding    = 1

; Mouse click
click-left = sudo /sbin/shutdown -r now

[module/poweroff]
type = custom/text

; Label
content            = ÔÄë
; content-foreground = ${colors.red}
content-padding    = 1

; Mouse click
click-left = sudo /sbin/shutdown -h now

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/home]
type = internal/fs
interval = 25

mount-0 = /home

label-mounted = %{F#0a81f5}~%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-focused = %name%
label-focused-background = ${colors.background}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %name%
label-occupied-padding = 2

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true
strip-wsnumbers = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/mpd]
type = internal/mpd
format-online = <label-song> <label-time> <toggle>

icon-prev = <<
icon-stop = X
icon-play-prefix = #f00
icon-play = (Paused)
icon-pause = 
icon-next = >>

;bar-progress-width = 45
;bar-progress-indicator = |
;bar-progress-fill = -
;bar-progress-empty = -

label-song-maxlen = 70
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ‚îÄ
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ‚îÄ
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " Ôãõ "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp5s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.primary}
label-connected = %essid%

format-disconnected =
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = Óàò
ramp-signal-1 = Óàô
ramp-signal-2 = Óàö
ramp-signal-3 = Óàö
ramp-signal-4 = Óàö
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = enp4s0
interval = 3.0

format-connected-underline = ${colors.primary}
format-connected-prefix = ""
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = " ÔÅ≥  %a %d.%m.%Y - KW %V"
time = " ÔÄó %H:%M"

format-prefix = ÓÄñ
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}

label = %time%  %date%

[module/pulseaudio-control]
type = custom/script
tail = true
label=%output%
format-underline = ${colors.primary}

;    --sink-nickname "bluez_sink.34_75_63_DB_90_2B.a2dp_sink: üéß"
exec = pulseaudio-control --icons-volume "ÔÄß ,ÔÄß ,ÔÄ® " --icon-muted "Ôë¶ " --node-nicknames-from "node.nick" listen
click-right = exec pavucontrol &
click-left = pulseaudio-control togmute
click-middle = pulseaudio-control next-node
scroll-up = pulseaudio-control --volume-max 100 --volume-step 5 up
scroll-down = pulseaudio-control --volume-max 100 --volume-step 5 down
label-padding = 2
label-foreground = ${colors.foreground}

[module/alsa]
type = internal/alsa

format-volume = <ramp-volume> <bar-volume>
label-volume-foreground = ${root.foreground}

format-muted-foreground = ${colors.foreground-alt}
label-muted = " Ôë¶ " 

ramp-volume-0 = " ÔÄ¶ "
ramp-volume-1 = " ÔÄß "
ramp-volume-2 = " ÔÄ® "

bar-volume-width = 15
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = 
bar-volume-indicator-font = 0
bar-volume-fill = ÔÅ®
bar-volume-fill-font = 0
bar-volume-empty = ÔÅ®
bar-volume-empty-font = 0
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
