[alias]
	a = add
	aa = a --all
	ap = a -p
	au = a -u
	aup = a -up
	br = branch
	bra = br -a
	cl = clone
	cm = commit
	cma = cm --amend
	ccma = cma --no-edit
    cmf = cm --fixup
	cmi = cm --interactive
	cmm = cm -m
	co = checkout
	f = fetch --all -v
	fp = f -p -t -P -v
	ll = log --graph --pretty='format:%C(red)%d%C(reset) %C(yellow)%h%C(reset) %ar %C(green)%aN%C(reset) %s'
	lsa = !git ll --all
	p = push
	pf = p --force-with-lease
	rb = rebase
	rba = rb --abort
	rbc = rb --continue
	rbi = rb --interactive
	rbia = rb --interactive --autosquash
	rbs = rb --skip
	remotes = remote -v
	rs = reset
	st = status -sb
	sta = stash
	uncm = reset --mixed HEAD~
    be = br --edit-description
    d = diff
    dc = d --cached
    ds = d --staged
    dst = d --stat
    pl = pull --all
    plc = pull
    pln = pl --rebase --no-autostash
    pub = !git push -u origin $(git branch --show-current)
    stl = stash list
    stp = stash pop
    sta = stash apply
    sth = stash
    tags = tag -n1 --list
    unpub = !git push origin :$(git branch --show-current)

[color]
    diff = auto
    status = auto
    branch = auto
    ui = true

[push]
    default = simple
    followTags = true

[diff]
	tool = nvimdiff
    colorMoved = default

[difftool "nvimdiff"]
	cmd = nvim -d $LOCAL $REMOTE

[core]
    pager = delta
	autocrlf = input
    askPass = true
    excludesFile = ~/.config/git/ignore

[credential]
	helper = store

[pull]
    rebase = true

[rebase]
    autoStash = true

[merge]
    conflictStyle = diff3

[interactive]
    diffFilter = delta --color-only

[delta]
    features = decorations

[delta "decorations"]
    side-by-side = false
    line-numbers = true
    file-modified-label = modified:

[include]
    path = ~/dotfiles/git/user

[init]
	templatedir = ~/.config/git/git-templates
